#!/usr/bin/env python3
import os
def read_items(file_path):
    with open(file_path, 'r') as file:
        items = [line.strip() for line in file]
    return items
file = str(input('jaki plik wariacie: '))
os.system("reset")
items = read_items(file)
s = '\033[101m| S |\033[0m'
a = '\033[41m| A |\033[0m'
b = '\033[43;90m| B |\033[0m'
c = '\033[103;90m| C |\033[0m'
d = '\033[42m| D |\033[0m'
f = '\033[102;90m| F |\033[0m'
print ("\033[31m---------------------------------------------\033[0m")
print (s)
print ("\033[31m---------------------------------------------\033[0m")
print (a)
print ("\033[31m---------------------------------------------\033[0m")
print (b)
print ("\033[31m---------------------------------------------\033[0m")
print (c)
print ("\033[31m---------------------------------------------\033[0m")
print (d)
print ("\033[31m---------------------------------------------\033[0m")
print (f)
print ("\033[31m---------------------------------------------\033[0m")
for i in items:
    print (i)
    x = str(input('Tier: '))
    if x.lower() == 's':
        s = s + ' ' + i + " |"
    if x.lower() == 'a':
        a = a + ' ' + i + " |"
    if x.lower() == 'b':
        b = b + ' ' + i + " |"
    if x.lower() == 'c':
        c = c + ' ' + i + " |"
    if x.lower() == 'd':
        d = d + ' ' + i + " |"
    if x.lower() == 'f':
        f = f + ' ' + i + " |"
    print("\033c")
    print ("\033[31m---------------------------------------------\033[0m")
    print (s)
    print ("\033[31m---------------------------------------------\033[0m")
    print (a)
    print ("\033[31m---------------------------------------------\033[0m")
    print (b)
    print ("\033[31m---------------------------------------------\033[0m")
    print (c)
    print ("\033[31m---------------------------------------------\033[0m")
    print (d)
    print ("\033[31m---------------------------------------------\033[0m")
    print (f)
    print ("\033[31m---------------------------------------------\033[0m")
