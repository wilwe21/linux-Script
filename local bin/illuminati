normal = {"ꚛ":"a","✡":"b","⌜":"c","↧":"d","⌟":"e","♂":"f","]":"g",".":"h","+":"i","δ":"j","☿":"k","⌞":"l","󰗧":"m","h":"n","t":"o",":":"p","┴":"q","x":"r","◇":"s","⸷":"t","⸶":"u","♃":"v","⌧":"w","⼟":"x","󰇙":"y","𝒩":"z","⁞":"0","⸪":"1","⯊":"2","⯋":"3","Ᏸ":"5","ᛞ":",","𝟑":";","𝟑̡":":","𝟔":".","𝟗":"!"}

