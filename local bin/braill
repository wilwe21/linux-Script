if args.single != None:
    if not args.braill:
        print(''.join(brail.get(ch,ch) for ch in args.single.lower()))
    elif args.braill:
        a = args.single.lower().replace("Ра╝Раџ", "0").replace("Ра╝РаЂ", "1").replace("Ра╝РаЃ", "2").replace("Ра╝РаЅ", "3").replace("Ра╝РаЎ", "4").replace("Ра╝РаЉ", "5").replace("Ра╝РаІ", "6").replace("Ра╝РаЏ", "7").replace("Ра╝РаЊ", "8").replace("Ра╝Раі", "9")
