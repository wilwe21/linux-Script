while args.braill and args.single == None:
    print("\033[38;2;203;166;247m­ЪГЃ\033[0m\033[48;2;203;166;247m\033[38;2;24;24;37mYou\033[0m\033[38;2;203;166;247m­ЪГЪ\033[0m")
    a = input().replace('"', '').lower()
    print("")
    print("\033[91;1m-----------------------\033[0m")
    print("")
    print("\033[38;2;166;227;161m­ЪГЃ\033[0m\033[48;2;166;227;161m\033[38;2;24;24;37mBraill\033[0m\033[38;2;166;227;161m­ЪГЪ\033[0m")
    a = a.replace("Ра╝Раџ", "0").replace("Ра╝РаЂ", "1").replace("Ра╝РаЃ", "2").replace("Ра╝РаЅ", "3").replace("Ра╝РаЎ", "4").replace("Ра╝РаЉ", "5").replace("Ра╝РаІ", "6").replace("Ра╝РаЏ", "7").replace("Ра╝РаЊ", "8").replace("Ра╝Раі", "9")
