parser.add_argument("-s", "--single", help="single")
args = parser.parse_args()
brail = {"a": "РаЂ","b": "РаЃ","c": "РаЅ","d": "РаЎ","e": "РаЉ","f": "РаІ","g": "РаЏ","h": "РаЊ","i": "Раі","j": "Раџ","k": "РаЁ","l": "РаЄ","m": "РаЇ","n": "РаЮ","o": "РаЋ","p": "РаЈ","q": "РаЪ","r": "РаЌ","s": "Рај","t": "Раъ","u": "РаЦ","v": "РаД","w": "Ра║","x": "РаГ","y": "Рай","z": "Рах","─Ё":"РаА","─Є":"РаЕ","─Ў":"Ра▒","┼ѓ":"РаБ","┼ё":"Ра╣","├│":"Раг","┼Џ":"Раф","┼╝":"Ра»","┼║":"Ра«","0":"Ра╝Раџ","1":"Ра╝РаЂ","2":"Ра╝РаЃ","3":"Ра╝РаЅ","4":"Ра╝РаЎ","5":"Ра╝РаЉ","6":"Ра╝РаІ","7":"Ра╝РаЏ","8":"Ра╝РаЊ","9":"Ра╝Раі"}
normal = {"РаЂ":"a","РаЃ":"b","РаЅ":"c","РаЎ":"d","РаЉ":"e","РаІ":"f","РаЏ":"g","РаЊ":"h","Раі":"i","Раџ":"j","РаЁ":"k","РаЄ":"l","РаЇ":"m","РаЮ":"n","РаЋ":"o","РаЈ":"p","РаЪ":"q","РаЌ":"r","Рај":"s","Раъ":"t","РаЦ":"u","РаД":"v","Ра║":"w","РаГ":"x","Рай":"y","Рах":"z","РаА":"─Ё","РаЕ":"─Є","Ра▒":"─Ў","РаБ":"┼ѓ","Ра╣":"┼ё","Раг":"├│","Раф":"┼Џ","Ра»":"┼╝","Ра«":"┼║"}

while not args.braill and args.single == None:
    print("\033[38;2;203;166;247m­ЪГЃ\033[0m\033[48;2;203;166;247m\033[38;2;24;24;37mYou\033[0m\033[38;2;203;166;247m­ЪГЪ\033[0m")
