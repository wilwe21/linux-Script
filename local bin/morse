#!/usr/bin/env python3
import os, argparse, re
parser = argparse.ArgumentParser()
parser.add_argument("-m", "--morse", help="From morse?", action=argparse.BooleanOptionalAction)
parser.add_argument("-s", "--single", help="single")
args = parser.parse_args()
morse = {"a":".- ","b":"-... ","c":"-.-. ","d":"-.. ","e":". ","f":"..-. ","g":"--. ","h":".... ","i":".. ","j":".--- ","k":"-.- ","l":".-.. ","m":"-- ","n":"-. ","o":"--- ","p":".--. ","q":"--.- ","r":".-. ","s":"... ","t":"- ","u":"..- ","v":"...- ","w":".-- ","x":"-..- ","y":"-.-- ","z":"--.. ","Ä…":".-.- ","Ä‡":"-.-.. ","Ä™":"..-.. ","Å‚":".-..- ","Å„":"--.-- ","Ã³":"---. ","Å›":"...-... ","Å¼":"--..- ","Åº":"--..-. ","0":"----- ","1":".----â  ","2":"..--- ","3":"...--â ‰ ","4":"....- ","5":"..... ","6":"-.... ","7":"--... ","8":"---.. ","9":"----."," ":"/ "}
normal = {".-":"a","-...":"b","-.-.":"c","-..":"d",".":"e","..-.":"f","--.":"g","....":"h","..":"i",".---":"j","-.-":"k",".-..":"l","--":"m","-.":"n","---":"o",".--.":"p","--.-":"q",".-.":"r","...":"s","-":"t","..-":"u","...-":"v",".--":"w","-..-":"x","-.--":"y","--..":"z",".-.-":"Ä…","-.-..":"Ä‡","..-..":"Ä™",".-..-":"Å‚","--.--":"Å„","---.":"Ã³","...-...":"Å›","--..-":"Å¼","--..-.":"Åº","-----":"0",".----â ":"1","..---":"2","...--â ‰":"3","....-":"4",".....":"5","-....":"6","--...":"7","---..":"8","----.":"9","/":" ",",/":", ","./":". ","!/":"! ","?/":"? "}

while not args.morse and args.single == None:
    print("\033[38;2;203;166;247mğŸ­ƒ\033[0m\033[48;2;203;166;247m\033[38;2;24;24;37mYou\033[0m\033[38;2;203;166;247mğŸ­Ÿ\033[0m")
    a = input().replace('"', '').lower()
    print("")
    print("\033[38;2;166;227;161mğŸ­ƒ\033[0m\033[48;2;166;227;161m\033[38;2;24;24;37mMorse\033[0m\033[38;2;166;227;161mğŸ­Ÿ\033[0m")
    print(''.join(morse.get(ch,ch) for ch in a))
    print("")
    print("\033[91;1mâ€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”\033[0m")
    print("")
while args.morse and args.single == None:
    print("\033[38;2;203;166;247mğŸ­ƒ\033[0m\033[48;2;203;166;247m\033[38;2;24;24;37mYou\033[0m\033[38;2;203;166;247mğŸ­Ÿ\033[0m")
    a = input().replace('"', '').lower()
    print("")
    print("\033[38;2;166;227;161mğŸ­ƒ\033[0m\033[48;2;166;227;161m\033[38;2;24;24;37mUnMorse\033[0m\033[38;2;166;227;161mğŸ­Ÿ\033[0m")
    print(''.join(normal.get(word,word) for word in a.split()))
    print("")
    print("\033[91;1mâ€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”\033[0m")
    print("")
if args.single != None:
    if not args.morse:
        print(''.join(morse.get(ch,ch) for ch in args.single.lower()))
    elif args.morse:
        print(''.join(normal.get(word,word) for word in args.single.lower().split()))
